---
import DateTime from "../components/DateTime.astro";

const { title, date } = Astro.props;
---

<style is:global>
    header.title h1 {
        font-size: 2rem;
        text-wrap: balance;
        margin-bottom: 1rem;
    }

    @media (width >= 768px) {
        header.title h1 {
            font-size: 2.5rem;
        }
    }

    header.title + * {
        margin-top: 3rem;
    }
</style>

<header class="title">
    <h1>{title}</h1>
    {date ? <DateTime date={date} /> : null}
</header>
